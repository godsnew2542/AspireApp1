@page "/"

<PageTitle>Dashboard</PageTitle>

<h1>Dashboard</h1>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudGrid Spacing="2">
        <MudItem xl="3" lg="3" md="3" sm="6" xs="12">
            <MudPaper Class="d-flex align-center justify-center mud-width-full">
                รายการทรัพย์สิน ...
            </MudPaper>
        </MudItem>
        <MudItem xl="3" lg="3" md="3" sm="6" xs="12">
            <MudPaper Class="d-flex align-center justify-center mud-width-full">
                ถูกยืม/ใช้งาน ...
            </MudPaper>
        </MudItem>
        <MudItem xl="3" lg="3" md="3" sm="6" xs="12">
            <MudPaper Class="d-flex align-center justify-center mud-width-full">
                ชำรุด/สูญหาย ...
            </MudPaper>
        </MudItem>
        <MudItem xl="3" lg="3" md="3" sm="6" xs="12">
            <MudPaper Class="d-flex align-center justify-center mud-width-full">
                Member ...
            </MudPaper>
        </MudItem>
    </MudGrid>

    <div class="my-2">
        รายการทรัพย์สินทั้งหมด
    </div>

    <div class="my-2">
        <MudTable Items="@Elements" Hover Bordered Striped>
            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>ข้อมูลทรัพย์สิน</MudTh>
                <MudTh>ปีซื้อ</MudTh>
                <MudTh>ราคา (บาท)</MudTh>
                <MudTh>สถานะ</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Id">@context.Id</MudTd>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="PurchaseDate">@context.PurchaseDate</MudTd>
                <MudTd DataLabel="Price">@context.Price</MudTd>
                <MudTd DataLabel="Status">@context.Status</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </div>
</MudContainer>

<br />
<MudButton Variant="Variant.Filled" Color="Color.Primary">Primary</MudButton>

<br />

@if (isLoading)
{
    <div style="text-align:center;">
        <h1>
            Loading...
        </h1>
    </div>
}
else
{
    @foreach (var item in resumes)
    {
        <div>@item.CusNameTh</div>
    }
}
